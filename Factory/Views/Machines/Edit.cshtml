@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2 class="display-4 lh-1 mb-4">Edit @Html.DisplayFor(model => model.Name)</h2>

<div class="col-12 col-lg-5">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    <div class="form-group">
      <p>Machine Name</p>
      @Html.TextBoxFor(model => model.Name,
      new {required="required"})
    </div>
    <div class="form-group">
      <p>Machine Status</p>
      @Html.EditorFor(model => model.MachineStatus)
    </div>
    <div class="form-group">
      <p>Inspection Date</p>
      @Html.EditorFor(model => model.InspectionDate)
    </div>
    <div class="form-group">
      @Html.Label("Select Engineer")
      @Html.DropDownList("EngineerId")
    </div>
    <input type="submit" value="Save" class="btn btn-primary"/>
  }
</div>
<br>
<div class="col-12 col-lg-5">
  <p>@Html.ActionLink("Back to list", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })</p>
</div>