@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <section class="bg-light">
      <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">No machines have been added yet!</p>
            </div>
        </div>
    </div>
  </section>
} 

@foreach (Machine machine in Model)
{
    <section class="bg-light">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center justify-content-lg-between">
            <div class="col-12 col-lg-5">
                <p class="lead fw-normal text-muted mb-5 mb-lg-0">@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</p>
            </div>
        </div>
    </div>
  </section>

}

<p>@Html.ActionLink("Add New Machine", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role="button" })</p>
