@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4 class="display-4 lh-1 mb-4">Add New Engineer</h4>

<div class="col-12 col-lg-5">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      <p>Engineer Name</p>
      @Html.TextBoxFor(model => model.Name,
    new {required="required"})
    </div>
    <div class="form-group">
      <p>Engineer Status</p>
      @Html.TextBoxFor(model => model.EnginnerStatus)
    </div>
    <input type="submit" value="Add Engineer" class="btn btn-primary"/>
  }
</div>